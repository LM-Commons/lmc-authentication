{
  "name": "lm-commons/lmc-authentication",
  "description": "Laminas Mezzio Authentication",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "mezzio",
    "laminas",
    "authentication"
  ],
  "authors": [
    {
      "name": "Eric Richer",
      "email": "eric.richer@vistoconsulting.com"
    }
  ],
  "require": {
    "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
    "laminas/laminas-stdlib": "^3.1",
    "psr/http-message": "^1.0.1 || ^2.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "laminas/laminas-coding-standard": "^3.0",
    "phpunit/phpunit": "^11.5",
    "psalm/plugin-phpunit": "^0.19.0",
    "vimeo/psalm": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Lmc\\Authentication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LmcTest\\Authentication\\": "test/"
    }
  },
  "extra": {
    "laminas": {
      "config-provider": "Lmc\\Authentication\\ConfigProvider"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --coverage-clover ./build/logs/clover.xml",
    "test-coverage-html": "phpunit --colors=always --coverage-html ./build/html",
    "static-analysis": "psalm --shepherd --stats"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.2.99"
    }
  }
}
